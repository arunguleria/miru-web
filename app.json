{
  "name": "Miru",
  "repository": "https://github.com/saeloun/miru-web",
  "description": "Miru is an open-source to for time tracking, invoice management, and accounting easy for small businesses worldwide.",
  "website": "https://getmiru.com/",
  "logo": "https://getmiru.com/assets/images/image01.svg",
  "success_url": "/",
  "env": {
    "SECRET_TOKEN": {
      "description": "A secret key for verifying the integrity of signed cookies.",
      "generator": "secret"
    },
    "RACK_ENV": {
      "description": "Environment for rack middleware.",
      "value": "production"
    },
    "RAILS_ENV": {
      "description": "Environment for rails middleware.",
      "value": "production"
    },
    "APP_BASE_URL": {
      "description": "Base URL for the application.",
      "value": "https://CHANGE.herokuapp.com"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "FREE"
    },
    "worker": {
      "quantity": 1,
      "size": "FREE"
    }
  },
  "image": "heroku/ruby",
  "addons": [ "heroku-redis", "heroku-postgresql", "bonsai:sandbox-6"],
  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-google-chrome.git"
    },
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "https://github.com/jontewks/puppeteer-heroku-buildpack#22.0.0-no-xdg-utils"
    },
    {
      "url": "heroku/ruby"
    }
  ],
  "environments": {
    "test": {
      "scripts": {
        "postdeploy": "bundle exec rails db:migrate && bundle exec rails db:seed && bundle exec rails data:migrate"
      }
    }
  }
}
